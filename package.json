{
  "private": false,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && yarn build:prisma && yarn build:remix",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:prisma": "prisma generate --data-proxy",
    "build:remix": "remix build",

    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "concurrently \"yarn dev:css \" \"remix build && run-p \\\"dev:*\\\"\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",

    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "dependencies": {
    "@prisma/client": "4.4.0",
    "@remix-run/cloudflare": "^1.6.8",
    "@remix-run/cloudflare-pages": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.3.0",
    "remix-auth-form": "^1.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "eslint": "^8.22.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prisma": "^4.4.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.27"
  },
  "engines": {
    "node": ">=16.13"
  }
}
